<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="0dp"
            android:stretchColumns="*"
            >
            <TableRow
                android:background="@drawable/shape_table">
                <TextView
                    android:text="Solicitud"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Almacen"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Llegada"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Despachado"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Estatus"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Vehiculo"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Placas"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Mercancia"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Cantidad"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:layout_weight="1">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Solicitud"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/solicitud"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Almacen"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/almacen"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Llegada"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/llegada"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Despachado"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/despacho"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Estatus"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/estatus"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Vehiculo"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/vehiculo"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Placas"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/placas"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Mercancia"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/mercancia"
                    android:layout_weight="1">
                </TextView>
                <TextView
                    android:text="Cantidad"
                    android:layout_width="150dp"
                    android:textAlignment="center"
                    android:layout_column="0"
                    android:id="@+id/cantidad"
                    android:layout_weight="1">
                </TextView>
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>
</android.support.v7.widget.CardView>
