<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardInvFis"
        android:layout_margin="16dp"
        android:elevation="6dp"
        android:outlineAmbientShadowColor="@color/md_grey_200"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Filtros"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center">
                </TextView>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Del Cliente"
                    android:id="@+id/invFisText"
                    android:layout_margin="10dp"
                    android:editable="false"
                    android:padding="10dp">
                </android.support.design.widget.TextInputEditText>
                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:id="@+id/plaza_InvFis">

                </Spinner>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/buscarInvFis"
                    android:text="Buscar"
                    android:textSize="16dp"
                    android:elevation="5dp"
                    style="@style/Widget.MaterialComponents.Button.Icon">
                </Button>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/expandablebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="right|end|bottom"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="top|right"
        android:background="@drawable/efecto_button"
        android:backgroundTint="@color/md_blue_400"
        android:src="@drawable/mas"
        app:pressedTranslationZ="12dp">
    </android.support.design.widget.FloatingActionButton>
    </android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagina"
            android:textSize="18dp"
            android:id="@+id/textFila"
            android:visibility="invisible"
            android:textColor="@color/black">
        </TextView>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="horizontal|vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/botonesPagination">
                    </LinearLayout>
                </HorizontalScrollView>
            </ScrollView>
    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hscroll">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">
            <TableLayout
                android:id="@+id/tableLayoutPackingList2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4sp"
                android:layout_marginLeft="4sp"
                android:layout_marginEnd="4sp"
                android:layout_marginRight="4sp"
                android:stretchColumns="*"
                android:isScrollContainer="true">
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>