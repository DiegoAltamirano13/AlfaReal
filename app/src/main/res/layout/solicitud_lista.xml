<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/sch">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:layout_marginStart="10dp"
                    android:text="    SOLICITUD:    "
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:textAlignment="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/texto_Solicitud"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:text="    ALMACEN:    "
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:layout_marginEnd="10dp"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:id="@+id/texto_Almacen"
                    android:textSize="15dp"
                    android:text="">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:text="    VEHICULO:    "
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape"
                    android:textSize="15dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:id="@+id/texto_Vehiculo"
                    android:textSize="15dp"
                    android:text="">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:text="    PLACAS:    "
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape"
                    android:textSize="15dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:id="@+id/texto_Placas"
                    android:textSize="15dp"
                    android:text="">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:text="    CONDUCTOR:    "
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape"
                    android:textSize="15dp"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:id="@+id/texto_Conductor"
                    android:textSize="15dp"
                    android:text=""
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp">
                </TextView>
            </LinearLayout>
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        >

        <HorizontalScrollView
            android:id="@+id/scrollViewHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/layout_registrado"
                        android:background="@drawable/shape_circle"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/truck_ini"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/shape_circle"
                            android:src="@drawable/ic_truck_solid"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REGISTRADO POR ARGO"
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/fecha_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/layout_enrampado"
                        android:background="@drawable/shape_circle"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/truck_ini_carga"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/shape_circle"
                            android:src="@drawable/ic_truck_solid"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ENRAMPADO"
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/fecha_enrampado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_circle"
                        android:orientation="vertical"
                        android:id="@+id/layout_carga">

                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/truck_carga"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/shape_circle"
                            android:src="@drawable/ic_truck_solid"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DESCARGANDO"
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/fecha_descarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_circle"
                        android:orientation="vertical"
                        android:id="@+id/layout_descargado">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:id="@+id/truck_fin_carga"
                            android:background="@drawable/shape_circle"
                            android:src="@drawable/ic_truck_solid"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CERRADO"
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/fecha_cierre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_circle"
                        android:orientation="vertical"
                        android:id="@+id/layout_vehiculo_desp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/shape_circle"
                            android:id="@+id/truck_despacho"
                            android:src="@drawable/ic_truck_solid"></ImageView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DESPACHADO"
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>

                    <TextView
                        android:id="@+id/fecha_despachado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/md_black_1000"
                        android:textSize="10dp"></TextView>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>